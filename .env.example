# ⭐ Cloudflare R2 Configuration
# Substitui pelos teus valores reais da Cloudflare

# Account ID da tua conta Cloudflare (encontras no dashboard)
CLOUDFLARE_ACCOUNT_ID=abc123def456

# Nome do bucket R2 que criaste
S3_BUCKET_NAME=immich-photos

# Access Key e Secret Key do R2
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here

# Endpoint R2 (substitui CLOUDFLARE_ACCOUNT_ID pelo valor real)
S3_ENDPOINT=https://${CLOUDFLARE_ACCOUNT_ID}.r2.cloudflarestorage.com

# Database Configuration
DB_PASSWORD=postgres_secure_password
POSTGRES_PASSWORD=postgres_secure_password

# Timezone (opcional - ajusta para a tua região)
TZ=Europe/Lisbon