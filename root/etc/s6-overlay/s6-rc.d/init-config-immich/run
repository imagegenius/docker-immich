#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
    /config/machine-learning \
    /import \
    /run/immich

if [ ! -d "/photos" ]; then
    mkdir -p /photos
    lsiown -R abc:abc /photos
fi

# permissions
find /app/immich -path "*/node_modules" -prune -o -exec chown abc:abc {} +
lsiown -R abc:abc \
    /config \
    /run/immich \
    /usr/src/resources
