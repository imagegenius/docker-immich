#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
    /config/{typesense,machine-learning} \
    /photos \
    /import \
    /run/immich

# permissions
find /app/immich -path "*/node_modules" -prune -o -exec chown abc:abc {} +
lsiown -R abc:abc \
    /app/typesense \
    /config \
    /photos \
    /run/immich \
    /usr/src/resources
lsiown -R abc:abc /import 2>/dev/null